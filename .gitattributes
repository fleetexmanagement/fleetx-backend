# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.ts text
*.js text
*.tsx text
*.jsx text
*.json text
*.yaml text
*.yml text
*.md text
*.html text
*.css text
*.scss text

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md linguist-documentation
*.txt text

# Configuration files
.gitignore text
.gitattributes text
.editorconfig text
*.config.* text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.node binary
*.wasm binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.bz2 binary
*.7z binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Generated files (exclude from language stats)
package-lock.json linguist-generated=true
bun.lock linguist-generated=true
yarn.lock linguist-generated=true
src/generated/** linguist-generated=true
**/generated/** linguist-generated=true

# Exclude from exports
.github export-ignore
.husky export-ignore
tests export-ignore
.gitignore export-ignore
.gitattributes export-ignore
.vscode export-ignore
.idea export-ignore
*.md export-ignore

